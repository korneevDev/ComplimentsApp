<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_favorite_compliment"
        android:textSize="20sp"
        android:padding="@dimen/padding_16dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    tools:ignore="UseCompoundDrawables">

    <com.mik0war.complimentsApp.CustomTextView
        android:id="@+id/compliment_view"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:padding="@dimen/padding_16dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        tools:text="Compliment"/>

    <com.mik0war.complimentsApp.CustomImageButton
        android:id="@+id/favorite_icon"
        android:padding="@dimen/padding_16dp"
        android:layout_width="wrap_content"
        android:background="?selectableItemBackground"
        android:layout_height="wrap_content"
        android:contentDescription="@string/favorite_icon"
        tools:src="@drawable/favorite_empty" />
</LinearLayout>
    <com.mik0war.complimentsApp.CustomProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:indeterminate="true"
        />
    <com.mik0war.complimentsApp.CustomButton
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/get_button"
        android:layout_margin="@dimen/padding_16dp"
        android:padding="@dimen/padding_16dp"/>
</LinearLayout>