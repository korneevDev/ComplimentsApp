<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/checkbox"
        tools:ignore="VisualLintButtonSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="@dimen/padding_16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <com.mik0war.complimentsApp.presentation.CustomTextView
            android:id="@+id/data_view"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="@dimen/padding_16dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            tools:text="Data"/>

        <com.mik0war.complimentsApp.presentation.CustomImageButton
            android:id="@+id/favorite_icon"
            android:padding="@dimen/padding_16dp"
            android:layout_width="wrap_content"
            android:background="?selectableItemBackground"
            android:layout_height="wrap_content"
            android:contentDescription="@string/favorite_icon"
            tools:src="@drawable/favorite_empty" />
    </LinearLayout>
    <com.mik0war.complimentsApp.presentation.CustomProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:indeterminate="true"
        />
    <com.mik0war.complimentsApp.presentation.CustomButton
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:padding="@dimen/padding_16dp"/>
</merge>